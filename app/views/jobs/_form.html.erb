
<%= form_for(@job) do |f| %>

  <div class="field">
    <%= f.label :start_date %><br />
    <%= f.text_field :start_date, id: 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :job_num %><br />
    <%= f.text_field :job_num %>
  </div>

  <div class="field">
  <%= f.fields_for :job_costcodes do |builder| %>
    <%= render "job_costcode_form", :f => builder %>
  <% end %>
  </div>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
